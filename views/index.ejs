<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900 text-white">
      <div class="form p-20">
        <form action="/create" method="post" class="flex flex-col gap-2 m-auto w-[80%]">
          <input
            class="block px-5 py-2 bg-zinc-800 width-full h-15 outline-none rounded-md"
            type="text"
            placeholder="Title"
            name="title"
          />
          <textarea
            class="block rounded-md outline-none px-5 py-2 h-100 bg-zinc-800 resize-none"
            placeholder="Task"
            name="details"
          ></textarea>
          <input
            type="submit"
            class="rounded py-3 bg-blue-800"
            value="Create Task"
          />
        </form>
      </div>
      <div class="tasks p-10 flex gap-3 flex-wrap justify-center">
        <% if(files.length>0){ %>
          <% files.forEach(function(val){ %>
            <div class="task w-72 px-3 py-4 bg-zinc-800 rounded-md">
              <h1 class="text-white text-3xl tracking-tighter">
              Hello
              <a class="text-blue-500 block text-xs mt-3" href="">Read more</a>
              </h1>
            </div>
            <% }) %>
        <% }else{ %>
          <h3 class="text-gray-500">no tasks yet</h3>
        <% } %>
        
        <div class="task w-72 px-3 py-4 bg-zinc-800 hidden rounded-md">
          <h1 class="text-white text-3xl tracking-tighter">
            Hello
            <a class="text-blue-500 block text-xs mt-3" href="">Read more</a>
          </h1>
        </div>
        <div class="task w-72 px-3 py-4 bg-zinc-800 hidden rounded-md">
          <h1 class="text-white text-3xl tracking-tighter">
            Hello
            <a class="text-blue-500 block text-xs mt-3" href="">Read more</a>
          </h1>
        </div>
        
      </div>
    </div>
  </body>
</html>
